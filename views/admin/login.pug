    body#signin-page
        .page-form
            form(action="/admin/postLogin", method="post").form
                .header-content
                    h1 MY-HOME
                .body-content
                    .form-group
                        .input-icon.right
                            i.fa.fa-user
                            input#emailid.form-control(type="text", name="emailid",placeholder="emailid")
                    .form-group
                        .input-icon.right
                            i.fa.fa-key
                            input#password.form-control(type="password", name="password",placeholder="password")
                    .form-group.pull-left
                        .checkbox-list
                            label
                                input#checkbox(type="checkbox", name="checkbox")
                                |Keep me signed in
                    .form-group.pull-right
                        button(type="submit").btn.btn-success
                            i.fa.fa-chevron-circle-right Log In
                    .clearfix
                            

