extends ../layout/admin_layout.pug

block body
    #page-wrapper
        #title-breadcrumb-option-demo.page-title-breadcrumb
            .page-header.pull-left
                .page-title Category
            ol.breadcrumb.page-breadcrumb
                li
                    i.fa.fa-home
                        a(href="#") Home&nbsp;&nbsp;
                    i.fa.fa-angle-right &nbsp;&nbsp;
                li
                    a(href="#") Category&nbsp;&nbsp;
                        i.fa.fa-angle-right &nbsp;&nbsp;
                li.active Category
        .page-content
            if(successmessage)
                .note.note-success
                    h4.box-heading SUCCESS
                    P Category Created Successfully
            if(errormessage)
                .note.note-danger
                    h4.box-heading ERROR
                    P #{errormessage}
            .row
                .col-lg-12
                    .panel.panel-danger
                        .panel-heading Category
                        .panel-body.pan
                            form(action="/category/createcategory", method="post", enctype="multipart/form-data").form-horizontal
                                .form-body.pal
                                    .form-group
                                        label(for="categoryname").col-md-3.control-label Categore Name
                                            span.require *
                                        .col-md-9
                                            input#categoryname(type="text", name="categoryname",placeholder="Category Name", required="").form-control
                                    .form-group
                                        label(for="alias").col-md-3.control-label Alias
                                            span.require *
                                        .col-md-9
                                            input#alias(type="text", name="alias",placeholder="Alias", required="").form-control
                                    .form-group
                                        label(for="alias").col-md-3.control-label Primary Category
                                            span.require *
                                        .col-md-9
                                            select#primary(name="primary").select2-size.form-control
                                                option(value="0") Primary
                                                each category in categorys
                                                    option(value=category._id) #{category.alias}
                                    .form-group
                                        label(for="image").col-md-3.control-label Image
                                            span.require *
                                        .col-md-9
                                            input#image(type="file", name="image",placeholder="image", required="").form-control
                                    .form-actions
                                        .col-md-offset-3.col-md-9
                                            button(type="submit").btn.btn-primary Submit
                                            |&nbsp;                                            
                                            button(type="reset").btn.btn-green Reset